<h1>Listing match_images</h1>

<table>
  <tr>
    <th>Match</th>
    <th>Image</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @match_images.each do |match_image| %>
  <tr>
    <td><%= match_image.match_id %></td>
    <td><%= match_image.image %></td>
    <td><%= link_to 'Show', match_image %></td>
    <td><%= link_to 'Edit', edit_match_image_path(match_image) %></td>
    <td><%= link_to 'Destroy', match_image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

